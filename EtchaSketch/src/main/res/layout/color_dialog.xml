<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/colorDialogLayout"
    android:minWidth="300dp">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:layout_marginTop="15dp">

        <TableRow android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
            android:text="Transparency"
            android:gravity="right"
            android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            </TextView>
            <SeekBar android:id="@+id/transparencySeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="255"
                android:paddingLeft="15dp"
                android:progressDrawable="@drawable/etchasketch_scrubber_progress_horizontal_holo_light"
                android:thumb="@drawable/etchasketch_scrubber_control_normal_holo">
            </SeekBar>
         </TableRow>
        <TableRow android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text="Red"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            </TextView>
            <SeekBar android:id="@+id/blueSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="255"
                android:paddingLeft="15dp"
                android:progressDrawable="@drawable/etchasketch_scrubber_progress_horizontal_holo_light"
                android:thumb="@drawable/etchasketch_scrubber_control_normal_holo">
            </SeekBar>
        </TableRow>
        <TableRow android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text="Green"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            </TextView>
            <SeekBar android:id="@+id/greenSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="255"
                android:paddingLeft="15dp"
                android:progressDrawable="@drawable/etchasketch_scrubber_progress_horizontal_holo_light"
                android:thumb="@drawable/etchasketch_scrubber_control_normal_holo">
            </SeekBar>
        </TableRow>
        <TableRow android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:text="Blue"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
            </TextView>
            <SeekBar android:id="@+id/redSeekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="255"
                android:paddingLeft="15dp"
                android:progressDrawable="@drawable/etchasketch_scrubber_progress_horizontal_holo_light"
                android:thumb="@drawable/etchasketch_scrubber_control_normal_holo">
            </SeekBar>
        </TableRow>

        <LinearLayout>
           <View android:id="@+id/colorView"
                android:layout_width="match_parent"
               android:layout_marginTop="15dp"
               android:layout_height="30dp"></View>
        </LinearLayout>

    </TableLayout>

    <Button android:id="@+id/setColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/setColorButton"
        android:layout_below="@+id/colorView"
        android:layout_marginTop="15dp"
        android:background="@drawable/etchasketch_btn_default_focused_holo_light"/>

</LinearLayout>